---
import Layout from '../layouts/Layout.astro';
import { siteConfig } from '../config';
---

<Layout title={`${siteConfig.name} - ${siteConfig.title}`}>
  <main class="max-w-4xl mx-auto px-6 py-20">
    <header class="mb-20 animate-fade-up">
      <div class="flex flex-col md:flex-row md:items-center gap-10 mb-8">
        <div class="relative group">
          <div class="absolute -inset-1 bg-gradient-to-r from-accent to-blue-600 rounded-full blur opacity-25 group-hover:opacity-50 transition duration-1000 group-hover:duration-200"></div>
          <img 
            src="/profile.jpg" 
            alt={siteConfig.name} 
            class="relative w-32 h-32 md:w-40 md:h-40 rounded-full object-cover border-4 border-white shadow-premium"
          />
        </div>
        <div>
          <div class="inline-block px-4 py-1.5 mb-4 text-sm font-semibold tracking-wide text-accent uppercase bg-accent-soft rounded-full">
            Available for CV/AI Roles
          </div>
          <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-2 tracking-tight leading-tight">
            {siteConfig.name}
          </h1>
          <p class="text-xl md:text-2xl text-gray-600 font-medium max-w-2xl leading-relaxed">
            {siteConfig.title}
          </p>
        </div>
      </div>
      <div class="flex flex-wrap gap-4 mt-8">
        <a href={`mailto:${siteConfig.social.email}`} class="px-6 py-3 bg-accent text-white font-semibold rounded-xl hover:bg-accent/90 transition-all hover:scale-105 active:scale-95 shadow-lg shadow-accent/20">
          Get in touch
        </a>
        <div class="flex items-center gap-4 ml-2">
          <a href={siteConfig.social.linkedin} target="_blank" class="p-3 bg-white text-gray-600 rounded-xl hover:text-accent transition-all glass-card border-none shadow-premium hover:scale-110">
            <span class="sr-only">LinkedIn</span>
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>
          </a>
          <a href={siteConfig.social.github} target="_blank" class="p-3 bg-white text-gray-600 rounded-xl hover:text-accent transition-all glass-card border-none shadow-premium hover:scale-110">
            <span class="sr-only">GitHub</span>
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"/></svg>
          </a>
          <a href="/resume.pdf" target="_blank" class="flex items-center gap-2 px-4 py-2 text-sm font-semibold text-gray-700 bg-white rounded-xl hover:text-accent transition-all glass-card border-none shadow-premium hover:-translate-y-1">
             Resume
          </a>
        </div>
      </div>
    </header>

    <div class="space-y-32">
      <section id="about" class="animate-fade-up" style="animation-delay: 0.1s">
        <h2 class="section-title">About Me</h2>
        <div class="glass-card p-8 md:p-10 leading-loose text-primary/80 text-lg">
          {siteConfig.aboutMe}
        </div>
      </section>

      <section id="skills" class="animate-fade-up" style="animation-delay: 0.2s">
        <h2 class="section-title">Technical Expertise</h2>
        <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-6">
          {siteConfig.skills.map(group => (
            <div class="glass-card p-6 border-none shadow-premium bg-surface/40">
              <h3 class="text-base font-bold text-accent uppercase tracking-widest mb-5">{group.category}</h3>
              <div class="flex flex-wrap gap-2.5">
                {group.items.map(skill => (
                  <span class="px-4 py-1.5 bg-surface dark:bg-white/5 border border-gray-100 dark:border-white/5 rounded-xl text-sm font-semibold text-primary/80">
                    {skill}
                  </span>
                ))}
              </div>
            </div>
          ))}
        </div>
      </section>

      <section id="experience" class="animate-fade-up" style="animation-delay: 0.3s">
        <h2 class="section-title">Professional Experience</h2>
        <div class="space-y-16">
          {siteConfig.experience.map(exp => (
            <div class="relative pl-10 md:pl-12">
              <div class="absolute left-0 top-1.5 w-4 h-4 bg-accent rounded-full border-4 border-white dark:border-slate-900 shadow-sm z-10"></div>
              <div class="absolute left-[7px] top-6 bottom-[-32px] w-0.5 bg-gray-200 dark:bg-slate-700"></div>
              
              <div class="flex flex-col md:flex-row md:justify-between items-start mb-6">
                <div>
                  <h3 class="text-xl font-bold font-sans text-primary">{exp.company}</h3>
                  <p class="text-accent font-semibold mt-1">{exp.title}</p>
                </div>
                <span class="mt-2 md:mt-0 px-3 py-1 bg-surface border border-gray-100 dark:border-white/5 rounded-lg text-sm font-semibold text-text-muted shadow-sm">
                  {exp.dateRange}
                </span>
              </div>
              
              <ul class="space-y-4">
                {exp.bullets.map(bullet => (
                  <li class="flex items-start gap-3 text-primary/70 leading-relaxed italic">
                    <span class="mt-2 w-1.5 h-1.5 rounded-full bg-accent/40 shrink-0"></span>
                    {bullet}
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </section>

      <section id="projects" class="animate-fade-up" style="animation-delay: 0.4s">
        <h2 class="section-title">Research & Publications</h2>
        <div class="grid md:grid-cols-2 gap-8 mt-10">
          {siteConfig.research.map(proj => (
            <a href={proj.link} target="_blank" class="group glass-card p-8 block hover:-translate-y-2 transition-all duration-300">
              <div class="flex flex-wrap gap-2 mb-6">
                {proj.skills.map(skill => (
                  <span class="text-[10px] font-bold text-accent uppercase tracking-wider bg-accent-soft px-2.5 py-1 rounded-md">
                    {skill}
                  </span>
                ))}
              </div>
              <h3 class="text-xl font-bold mb-4 text-primary group-hover:text-accent transition-colors">
                {proj.name}
              </h3>
              <p class="text-text-muted text-sm leading-relaxed mb-6">
                {proj.description}
              </p>
              <div class="flex items-center gap-2 text-accent text-sm font-bold opacity-0 group-hover:opacity-100 transition-all -translate-x-2 group-hover:translate-x-0">
                View Publication <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
              </div>
            </a>
          ))}
        </div>
      </section>

      <section id="education" class="animate-fade-up pb-20" style="animation-delay: 0.5s">
        <h2 class="section-title">Education</h2>
        <div class="grid md:grid-cols-2 gap-8">
          {siteConfig.education.map(edu => (
            <div class="glass-card p-8">
              <div class="flex justify-between items-start mb-4">
                <h3 class="text-lg font-bold text-primary leading-tight pr-4">{edu.school}</h3>
                <span class="text-xs font-bold text-text-muted whitespace-nowrap">{edu.dateRange}</span>
              </div>
              <p class="text-accent font-semibold mb-3">{edu.degree}</p>
              {edu.achievements && (
                <div class="flex flex-wrap gap-3 mt-4">
                  {edu.achievements.map(ach => (
                    <span class="text-xs font-medium text-text-muted italic bg-surface/50 px-2 py-1 rounded">
                      {ach}
                    </span>
                  ))}
                </div>
              )}
            </div>
          ))}
        </div>
      </section>
    </div>

    <footer class="mt-40 pt-12 border-t border-gray-100 dark:border-slate-800 text-center text-text-muted text-sm">
      <p>&copy; <span id="year"></span> {siteConfig.name}</p>
      <p class="mt-2 font-medium italic">Built with Astro 5 & Tailwind CSS 4 â€¢ Optimized for production inference & device efficiency</p>
    </footer>
  </main>

  <script is:inline>
    document.getElementById("year").textContent = new Date().getFullYear();
  </script>
</Layout>
